<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <LinearLayout
        android:id="@+id/main_LAYOUT_buttonsStartMenu"
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"

        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_button1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Button Slow Mode"
            android:backgroundTint="@color/pink_purple">
        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_button2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Button Fast Mode"
            android:backgroundTint="@color/pink_purple">
        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_button3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Sensor Mode"
            android:backgroundTint="@color/pink_purple">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_scores"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="10 best scores"
            android:backgroundTint="@color/purple_700">
        </com.google.android.material.button.MaterialButton>


    </LinearLayout>
</RelativeLayout>